touch test

# new terminal

cd /tmp/dane1234
ls -l

# return to previous terminal

ls

exit

docker stop caf4b1d85830

docker ps

docker images

---------------------------------------------------------------------------------

#new task

docker pull probablyfine/flume

cd cd /tmp/dane1234 

nano

# example.conf: A single-node Flume configuration

# Name the components on this agent
a1.sources = r1
a1.sinks = k1
a1.channels = c1

# Describe/configure the source
a10.sources.r1.type = netcat
a1.sources.r1.bind = localhost
a1.sources.r1.port = 8081

# Describe the sink
a1.sinks.k1.type = logger

# Use a channel which buffers events in memory
a1.channels.c1.type = memory
a1.channels.c1.capacity = 1000
a1.channels.c1.transactionCapacity = 100

# Bind the source and sink to the channel
a1.sources.r1.channels = c1
a1.sinks.k1.channel = c1

ctrl+O example.conf ctrl+X

#pluma:
bin/flume-ng agent --conf conf --conf-file ../flume-config/flume.conf --name a1 -Dflume.root.logger=INFO,console

docker run -d --env FLUME_AGENT_NAME=a1 -p 8081:8081 -v /tmp/dane1234/example.conf:/opt/flume-config/flume.conf probablyfine/flume:latest

docker exec -it 2594ca680b30 /bin/bash

cd /opt

apt-get install telnet
Y

telnet localhost 8081

Hello World
OK

