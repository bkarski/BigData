#Apache NiFi

docker pull apache/nifi:latest

docker run --name nifi -p 8080:8080 -d apache/nifi:latest

docker exec -it nifi /bin/bash

mkdir /opt/nifi/nifi-current/dane

mkdir /opt/nifi/nifi-current/dane_new

#open localhost:8080

#create template in nifi

